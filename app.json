{
  "expo": {
    "name": "edba-frontend",
    "slug": "edba-frontend",
    "version": "1.0.0",
    "entryPoint": "./App.js",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "y",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to save files.",
        "NSMicrophoneUsageDescription": "We need access to your microphone for recording audio.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "UIBackgroundModes": ["fetch", "remote-notification"],
        "NSLocationWhenInUseUsageDescription": "We use your location to provide better services.",
        "NSUserTrackingUsageDescription": "We use your tracking data to provide better services.",  
        "NSCameraUsageDescription": "We need access to your camera to take photos.",
        "NSDocumentDirectoryUsageDescription": "We need access to your documents to read files."
        
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.abhilashpal.edbafrontend",
      "config": {
        "usesCleartextTraffic": true
      },
      "permissions": ["INTERNET","ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "3afa5d6a-ba0c-4247-bdae-7e79e67e8a86"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/3afa5d6a-ba0c-4247-bdae-7e79e67e8a86"
    }
  }
}
